# BuzzerDetector Configuration Template
# Copy this file to .env and customize for your environment

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Database type: mysql, sqlite3
DATABASE_TYPE=mysql

# SQLite Configuration (if using sqlite3)
DATABASE_PATH=buzzer_detection.db

# MySQL Configuration (if using mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=buzzer_user
MYSQL_PASSWORD=your_secure_password_here
MYSQL_DATABASE=buzzer_detection

# ===========================================
# AI & MACHINE LEARNING CONFIGURATION
# ===========================================

# Sentence transformer model for embeddings
EMBED_MODEL_NAME=all-MiniLM-L6-v2

# Enable/disable embeddings (true/false)
USE_EMBEDDINGS=true

# Enable advanced AI analysis (true/false)
AI_ANALYSIS_ENABLED=true

# ===========================================
# SCRAPING CONFIGURATION
# ===========================================

# Default scraping mode: snscrape, playwright
DEFAULT_SCRAPING_MODE=playwright

# Default limits
MAX_POSTS_DEFAULT=2000
DEFAULT_LIMIT=1000

# Browser configuration
USE_FIREFOX=true
HEADFUL_MODE=false

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================

# Number of CPU cores to use (-1 = all cores)
N_JOBS=-1

# Random seed for reproducibility
RANDOM_STATE=42

# Cross-validation folds
CROSS_VAL_FOLDS=5

# ===========================================
# MODEL & STORAGE CONFIGURATION
# ===========================================

# Directory for model storage
MODEL_DIR=models

# Directory for training history
TRAINING_HISTORY_DIR=results

# Save trained models (true/false)
SAVE_MODEL=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log format: simple, json
LOG_FORMAT=simple

# ===========================================
# API CONFIGURATION (Future Use)
# ===========================================

# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
GIN_MODE=debug

# API versioning
API_VERSION=v1

# CORS configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Security
JWT_SECRET=your-jwt-secret-key-change-in-production
API_RATE_LIMIT=100
RATE_LIMIT_WINDOW=60

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================

# Coordination detection thresholds
SIMILARITY_THRESHOLD=0.85
COORDINATION_WINDOW=3600
MIN_CLUSTER_SIZE=3

# Buzzer detection thresholds (auto-tuned)
FREQ_THRESHOLD=8.0
BURSTINESS_THRESHOLD=0.6
ACCOUNT_AGE_THRESHOLD=45
FOLLOWERS_THRESHOLD=150
HASHTAG_THRESHOLD=0.4

# Performance monitoring
ADAPTIVE_LEARNING=true
PERFORMANCE_TRACKING=true